<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <jsp-config>
        <taglib>
            <taglib-uri>/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/c.tld</taglib-location>
        </taglib>
    </jsp-config>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.userServlet.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/app/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.userServlet.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/app/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrate</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.userServlet.RegistrateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrate</servlet-name>
        <url-pattern>/app/registrate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.mainServlet.MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/app/operation/main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>remove</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.taskServlet.RemoveController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>remove</servlet-name>
        <url-pattern>/app/operation/remove</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>app.by.epamlab.gsu.controllers.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/app/operation/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>addtask</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.taskServlet.AddTaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addtask</servlet-name>
        <url-pattern>/app/operation/addtask</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>fixtask</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.taskServlet.FixTaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fixtask</servlet-name>
        <url-pattern>/app/operation/fixtask</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>file</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.fileServlet.FileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>file</servlet-name>
        <url-pattern>/app/operation/file</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.fileServlet.UploadFileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/app/operation/file/upload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deletefile</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.fileServlet.DeleteFileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deletefile</servlet-name>
        <url-pattern>/app/operation/file/deletefile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>downloadfile</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.fileServlet.DownloadTaskFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>downloadfile</servlet-name>
        <url-pattern>/app/operation/file/downloadfile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>recycletask</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.taskServlet.RecycleTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>recycletask</servlet-name>
        <url-pattern>/app/operation/recycletask</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>recyclealltask</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.taskServlet.RecycleAllTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>recyclealltask</servlet-name>
        <url-pattern>/app/operation/recyclealltask</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>resumetask</servlet-name>
        <servlet-class>app.by.epamlab.gsu.controllers.taskServlet.ResumeTaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>resumetask</servlet-name>
        <url-pattern>/app/operation/resumetask</url-pattern>
    </servlet-mapping>


</web-app>